<h1><%= @gymnast.name %></h1>
<br>
<h2>Skills Mastered:</h2>
<br>

<% Level.all.each do |level| %>
<h2>Level <%= level.gym_level %> Skills </h2>
  <% if @gymnast.skills.where("level_id = ?", level.gym_level).empty? %>
    <p> No skills for <%= level.gym_level %> </p>
    
  <% else %>  
    <% @gymnast.skills.where("level_id = ?", level.gym_level).each do |skill| %>
      <% if skill %>
        <h4><%= skill.category %>: <%= skill.name %></h4>
        <br>
      <% end %> 
    <% end %>  
  <% end %>  
<% end %>  
<br>
<br>
<h4><a href="/gymnasts/<%= @gymnast.id %>/levels">Add skills mastered</a></h4>