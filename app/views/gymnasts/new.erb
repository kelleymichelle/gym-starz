<%# <h2>Add a Gymnast</h2>
<form action="/gymnasts" method="post">
  <br><p>Name: <input type="text" name="name"></p>
  <input class="btn btn-primary" type="submit" value="Submit">
</form>
<center>
<img align="center" src="/images/teacupbunny.jpg" style="height: auto; width: auto; max-width: 300px; max-height: 300px;">
</center> %>

<style>
  .add-gymnast-wrapper {
    display: flex;
      justify-content: space-evenly;
  }
  .form-wrapper {
        display: flex;
      flex-direction: column;
      justify-content: center;
      margin-right: 32px;
  }
</style>
<div class="add-gymnast-wrapper">
  <div class="form-wrapper">
    <h2>Add a Gymnast</h2>

    
    <% if @gymnast && @gymnast.errors.any? %>
      <div id="error_explanation">
        <h2>Oops</h2>
        <ul>
        <% @gymnast.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <form action="/gymnasts" method="post">
      <br>
      <p>Name: <input type="text" name="name"></p>
      <input class="btn btn-primary" type="submit" value="Submit">
    </form>
  </div>
  <img src="/images/teacupbunny.jpg" style="height: auto; width: auto; max-width: 500px; max-height: 500px;">
</div>

<div class="nav-links">
<div class="link-1"><h4><a href="/gymnasts">View all Gymnasts</a></h4></div>
<div class="link-2"><h4><a href="/logout">Logout</a></h4></div>
</div>


